{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [],
    "allowJs": true,
    "outDir": "dist"
  },
  "include": ["stories/*.js", "stories/*.jsx"],
  "exclude": ["node_modules", "storybook-static"]
} 